<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update_student_fname</servlet-name>
        <servlet-class>update_student_fname</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update_student_password</servlet-name>
        <servlet-class>update_student_password</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update_faculty_lname</servlet-name>
        <servlet-class>update_faculty_lname</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signout</servlet-name>
        <servlet-class>signout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>total_lectures</servlet-name>
        <servlet-class>total_lectures</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update_attendance</servlet-name>
        <servlet-class>update_attendance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>upload_marks</servlet-name>
        <servlet-class>upload_marks</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update_student_fname</servlet-name>
        <url-pattern>/update_student_fname</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update_student_password</servlet-name>
        <url-pattern>/update_student_password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update_faculty_lname</servlet-name>
        <url-pattern>/update_faculty_lname</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signout</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>total_lectures</servlet-name>
        <url-pattern>/total_lectures</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update_attendance</servlet-name>
        <url-pattern>/update_attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>upload_marks</servlet-name>
        <url-pattern>/upload_marks</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
